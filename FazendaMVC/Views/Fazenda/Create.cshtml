@model FazendaMVC.Models.FazendaViewModel

@{
    ViewData["Title"] = "Cadastrar Fazenda";
}

<h4>Cadastrar Fazenda</h4>

<div class="row">
    <div class="card" style="width: 25rem; height: 25rem;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <h5 class="card-title">Nome da Fazenda</h5>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" style="width:100%" />
                </div>
                <br />
                <div>
                    <a asp-action="Index" class="btn btn-secondary" style="width:100%">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@TempData["Message"]


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
