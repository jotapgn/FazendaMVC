@model FazendaMVC.Models.FazendaViewModel

@{
    ViewData["Title"] = "Exibir";
}

<h1>Fazenda @Model?.Nome</h1>

<div>
    <hr />
    <div class="card">
        <div class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Nome)</strong>
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </div>
    </div>
    <br />
    @if (Model?.Animais != null)
    {
        <div style="background-color:white">
            <table class="table table-striped">
                <caption style="caption-side:top;color:black;font-weight:bolder">Animais</caption>
                <thead>
                    <tr>
                        <td>Tag</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var animal in Model.Animais)
                    {
                        <tr>
                            <td>@animal.Tag</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <br />
    <div>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>

</div>
