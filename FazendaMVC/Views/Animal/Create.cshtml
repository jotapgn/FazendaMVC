@model FazendaMVC.Models.AnimalViewModel

@{
    ViewData["Title"] = "Cadastrar Animal";
}

<h1>Cadastrar Animal</h1>

<hr />
@using (Html.BeginForm("Create", "Animal", FormMethod.Post))
{
    <div class="row">
        <div class="card" style="width: 25rem; height: 25rem;">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label" asp-for="FazendaId">Fazenda</label>
                        <div class="col-lg-8" style="width:100%">
                            @Html.DropDownListFor(model => model.FazendaId, (SelectList)ViewBag.ListaDeAnimaisPorFazenda, "Selecione uma fazenda", new { @class = "form-control", required = "required"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tag" class="control-label"></label>
                        <input asp-for="Tag" oninput="tamanhoMaximoCampoNumerio(this)" maxlength="15" class="form-control" />
                        <span asp-validation-for="Tag" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" style="width:100%" />
                    </div>
                    <br>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary" style="width:100%">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
