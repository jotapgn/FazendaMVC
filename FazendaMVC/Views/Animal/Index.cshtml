@model IEnumerable<FazendaMVC.Models.AnimalViewModel>

@{
    ViewData["Title"] = "Animais";
}

<h1>Animais</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar Animal</a>
</p>
<div style="background-color:white;" class="col-md-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código da Fazenda</th>
                <th>Tag</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FazendaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tag)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item?.Id" class="btn btn-primary">Exibir</a> |
                        <a asp-action="Delete" asp-route-id="@item?.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>