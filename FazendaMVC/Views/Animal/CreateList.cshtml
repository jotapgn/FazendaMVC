@model List<AnimalViewModel>

@{
    ViewData["Title"] = "CreateList";
}
@using (Html.BeginForm("CreateList", "Animal", FormMethod.Post))
{
    <div class="row">
        <div class="card" style="width: 25rem; min-height: 25rem;">
            <div class="card-body">
                <form asp-action="CreateList">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Fazenda</label>
                        <div class="col-lg-8" style="width:100%">
                            @Html.DropDownList("Fazenda",(SelectList)ViewBag.ListaDeAnimaisPorFazenda, "Selecione uma fazenda", new { @class = "form-control", required = "required"})
                        </div>
                    </div>
                    <div class="form-group" id="divTags">
                        <label asp-for="@Model[0].Tag" class="control-label"></label>
                        <input asp-for="@Model[0].Tag" oninput="tamanhoMaximoCampoNumerio(this)" maxlength="15" class="form-control tag" />
                        <span asp-validation-for="@Model[0].Tag" class="text-danger"></span>
                    </div>
                    <br>
                    <p>
                        <a class="btn btn-primary" onclick="adicionarNovaTag()">+</a>
                    </p>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" style="width:100%" />
                    </div>
                    <br>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary" style="width:100%">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
